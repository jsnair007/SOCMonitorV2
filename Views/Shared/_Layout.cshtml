<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SOCMonitorV2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container">
            <table border="0" align="left" cellpadding="0" cellspacing="0" width="100%" style="padding:0 0 0 0; margin:0 0 0 0;">
                <tr>
                    <td><h1><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Home"><img src="~/lib/Logo.png" /> </a></h1></td>
                    <td style="text-align:left;"><img src="~/lib/boblogo.jpg" alt="BOB" style="float:right"> </td>
                </tr>
            </table>
            <nav class="navbar navbar-expand-sm bg-info navbar-light ">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Home">Home</a>
                        </li>
                        @if (ViewBag.Role == "Admin" || ViewBag.Role == "SuperAdmin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Employee" asp-action="ResetPassword">Pwd_Reset</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Employee" asp-action="EmployeeList">Employee</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Attendance" asp-action="AttendanceList">Attendance</a>
                            </li>
                        }
                        @*@if (ViewBag.Role == "Admin")
                        {
                            <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Incidents" asp-action="IncidentList">Incidents</a>
        </li>
                        }*@
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Routine" asp-action="RoutineList">Routine_Task</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Task" asp-action="TaskList">Assigned_Task</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Shift" asp-action="ShiftList">Shift_Duty</a>
                        </li>

                        @*<li class="nav-item dropdown">
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dorpdown-tem" asp-action="Logout" asp-controller="Home">Lout</a>
                <a class="dorpdown-tem" asp-action="ShiftList" asp-controller="Shift">Change Password</a>
            </div>
        </li>*@
                    </ul>
                </div>
                <div>
                    <ul class="navbar-nav ">
                        <li class="nav-item" style="color:aqua">
                            <b class="nav-link" style="color:aqua">[@ViewBag.Name]</b>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal" tabindex="-1" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Information Security Department
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
